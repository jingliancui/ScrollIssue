<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.MainPage"
             >

    <CollectionView HorizontalScrollBarVisibility="Always" ItemsSource="{Binding Collections}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <HorizontalStackLayout>
                    <BoxView WidthRequest="800" HeightRequest="50" BackgroundColor="Blue"></BoxView>
                    <BoxView WidthRequest="800" HeightRequest="50" BackgroundColor="Red"></BoxView>
                    <BoxView WidthRequest="800" HeightRequest="50" BackgroundColor="Yellow"></BoxView>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
